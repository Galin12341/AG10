[MASTER]
# Pylint configuration for DevSecOps practice

[MESSAGES CONTROL]
# Enable all messages for comprehensive analysis
enable=all

[REPORTS]
output-format=text
reports=yes
score=yes

[FORMAT]
max-line-length=100
max-module-lines=1000

[DESIGN]
max-args=5
max-attributes=7
max-bool-expr=5
max-branches=12
max-locals=15
max-parents=7
max-public-methods=20
max-returns=6
max-statements=50
min-public-methods=0

[SIMILARITIES]
min-similarity-lines=4
